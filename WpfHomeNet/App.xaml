<Application x:Class="HomeSocialNetwork.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfHomeNet" StartupUri="MainWindow.xaml"
             xmlns:converters="clr-namespace:WpfHomeNet.Converters"> 
           
    <Application.Resources>
        <converters:HeightBattonCornerRadiusConverter x:Key="RadiusConverter"/>
        <converters:BorderCornerRadiusConverter x:Key="BorderRadiusConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>



        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="AntiqueWhite"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="contentPresenter"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     TextElement.FontWeight="{TemplateBinding FontWeight}"
                                     TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Наведение курсора -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#66ABC8AB"/>
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="Black"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="LightBlue"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="0.6"/>
                            </Trigger>

                            <!-- Нажатие -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFD5D5D5"/>
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#FF000000"/>
                            </Trigger>

                            <!-- Отключённое состояние (ИЗМЕНЕНО) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                <!-- Новый цвет -->
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#FF615959"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="BorderedContentStyle" TargetType="ContentControl">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border 
                    BorderThickness="0.15"
                    Margin="1,1,1,0"
                    BorderBrush="Black"
                    Padding="4"
                    CornerRadius="{Binding ActualHeight,
                        RelativeSource={RelativeSource TemplatedParent},
                        Converter={StaticResource RadiusConverter},
                        ConverterParameter=0.15}" 
                            HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
                            <TextBlock
                        Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0}}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontSize="12"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="TripleBorderStyle" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Grid>
                            <!-- Внешний Border (только рамка, без градиента) -->
                          <Border  CornerRadius="{Binding ActualWidth,
                                 RelativeSource={RelativeSource TemplatedParent},
                                 Converter={StaticResource BorderRadiusConverter},
                                 ConverterParameter=0.0160}"
                                 BorderThickness="0.8"
                                 BorderBrush="Black"
                                 Background="White">    
                                <!-- Белый фон для всего элемента -->

                                <!-- Контейнер для вложенных Border -->
                                <Grid>
                                    <!-- Средний Border -->
                                    <Border BorderThickness="1" Margin="-0.20"
                                    BorderBrush="LightBlue"
                                    CornerRadius="{Binding ActualWidth,
                                        RelativeSource={RelativeSource TemplatedParent},
                                        Converter={StaticResource BorderRadiusConverter},
                                        ConverterParameter=0.0152}"/>

                                    <!-- Внутренний Border (с градиентом) -->
                                    <Border Margin="0"  
                                    BorderThickness="0.6"
                                    BorderBrush="Black" 
                                    CornerRadius="{Binding ActualWidth,
                                        RelativeSource={RelativeSource TemplatedParent},
                                        Converter={StaticResource BorderRadiusConverter},
                                        ConverterParameter=0.0158}">

                                        <!-- Градиентный фон ВНУТРИ внутреннего бордера -->
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Color="#FF668C66" Offset="0.0"/>
                                                <GradientStop Color="Tan" Offset="0.7"/>
                                                <GradientStop Color="#99104710" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>

                                        <!-- Контент -->
                                        <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="InnerBorderSolidColorStyle" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Grid>
                            <Border
                        CornerRadius="8"
                        BorderThickness="0.6"
                        BorderBrush="Black"
                        Background="Transparent"
                        TextElement.Foreground="{TemplateBinding Foreground}"
                        TextBlock.Foreground="{TemplateBinding Foreground}">
                                <Grid>
                                    <Border
                                Margin="-0.3"
                                CornerRadius="8"
                                BorderThickness="0.6"
                                BorderBrush="LightBlue"
                                Background="Transparent"
                                TextElement.Foreground="{TemplateBinding Foreground}"
                                TextBlock.Foreground="{TemplateBinding Foreground}">
                                        <Grid>
                                            <Border
                                        Margin="-0.15"
                                        BorderThickness="0.3"
                                        BorderBrush="Black"
                                        CornerRadius="8"
                                        Background="{TemplateBinding Background}"
                                        TextElement.Foreground="{TemplateBinding Foreground}"
                                        TextBlock.Foreground="{TemplateBinding Foreground}">
                                                <ContentPresenter
                                            Margin="{TemplateBinding Padding}"
                                            TextElement.Foreground="{TemplateBinding Foreground}"
                                            TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>




        <Style x:Key="RoundedListBox" TargetType="ListBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border CornerRadius="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                                <ScrollViewer Padding="{TemplateBinding Padding}" Focusable="false">
                                    <ItemsPresenter />
                                </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InnerBorderTitleStyle" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border                        
                         BorderThickness="0.3"
                         BorderBrush="Black"
                         CornerRadius="3"
                         Background="#66ABC8AB">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>

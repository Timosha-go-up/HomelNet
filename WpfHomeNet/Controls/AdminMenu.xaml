<UserControl x:Class="WpfHomeNet.Controls.AdminMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfHomeNet.Controls"
             mc:Ignorable="d" 
             xmlns:converter="clr-namespace:WpfHomeNet.Converters"
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:InverseBooleanToVisibilityConverter x:Key="InverseBooleanVisibleConverter"/>
        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <StackPanel x:Name="Menu" Visibility="Visible"  
                IsEnabled="{Binding DataContext.IsButtonsPanelEnabled,
                RelativeSource={RelativeSource AncestorType=Window}}" > 
        
             <Button Content="User Profile"   
              Command="{Binding DataContext.ToggleFormVisibilityCommand,
              RelativeSource={RelativeSource AncestorType=Window}}"
              CommandParameter="{Binding DataContext.LoginViewModel,
              RelativeSource={RelativeSource AncestorType=Window}}" 
                     
              />
        
        
             <Button Content="Test list Users"/>

             <Button Content="Добавить юзера"                     
              Command="{Binding DataContext.ToggleFormVisibilityCommand,
              RelativeSource={RelativeSource AncestorType=Window}}"
              CommandParameter="{Binding DataContext.RegistrationViewModel,
              RelativeSource={RelativeSource AncestorType=Window}}"
              IsEnabled="{Binding DataContext.RegistrationViewModel.IsComplete,
              Converter={StaticResource InverseBooleanConverter},
              RelativeSource={RelativeSource AncestorType=Window}}"/> 
        
             <Button x:Name="DeleteUsers" Content="Удалить юзера"/>

        <Button x:Name="ShowUsers" Content="{Binding TableButtonText}"                     
              Command="{Binding UserTableViewCommand}"/>
            
            
                        
             <Button x:Name="ShowLogs" 
              Command="{Binding ToggleLogWindowCommand}"     
              Content="{Binding ToggleButtonText}"/>           
              
        </StackPanel>


    
</UserControl>

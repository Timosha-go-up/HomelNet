<UserControl x:Class="WpfHomeNet.Controls.RegistrationViewControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:viewmodels="clr-namespace:WpfHomeNet.ViewModels"             
 xmlns:converter="clr-namespace:WpfHomeNet.Converters"
             x:Name="RegistrationControl"

 Visibility="{Binding ControlVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
             mc:Ignorable="d"  Background="Transparent" BorderThickness="0"   
             Height="Auto" Width="Auto" Margin="10"
            >
    <UserControl.Resources>

        <converter:StateToBrushConverter x:Key="StateToBrushConverter"/>



    </UserControl.Resources>

    <ContentControl Style="{StaticResource TripleBorderStyle}" Padding="4" Background="#00000000">
        

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
               
            </Grid.ColumnDefinitions>

            <!-- EMAIL -->

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
               
                <Label Content="Email:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding UserData.Email, UpdateSourceTrigger=PropertyChanged}" 
                         BorderBrush="{Binding Path=EmailValidationState,
                   Converter={StaticResource StateToBrushConverter}}" 
                         IsEnabled="{Binding AreFieldsEnabled}"
                    Margin="0,0,0,5"
                    Padding="5">
                  
                </TextBox>
                <Label
                    Content="{Binding EmailMessage}"
                    Foreground="{Binding Path=EmailValidationState,
                   Converter={StaticResource StateToBrushConverter}}"
                    FontSize="11"
                    HorizontalAlignment="Center"                                              >
                  
                </Label>
            </StackPanel>



            <!-- PASSWORD -->
            
            
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                

                <Label  Content="Пароль:" VerticalAlignment="Center"/>
               
                     <TextBox
                x:Name="passwordTextBox"   IsEnabled="{Binding AreFieldsEnabled}"
                Text="{Binding UserData.Password, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{Binding Path=PasswordValidationState,
                     Converter={StaticResource StateToBrushConverter}}"
                Margin="0,0,0,5"
                Padding="5"/>
                    
               
                <Label
                Content="{Binding PasswordMessage}"
                 Foreground="{Binding Path=PasswordValidationState,
                 Converter={StaticResource StateToBrushConverter}}"
                FontSize="11"
                HorizontalAlignment="Center"
               />
            </StackPanel>

            <!-- USER NAME -->
            
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
               
                <Label  Content="Имя пользователя:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding UserData.UserName, UpdateSourceTrigger=PropertyChanged}"
                BorderBrush="{Binding Path=NameValidationState,
                           Converter={StaticResource StateToBrushConverter}}"  IsEnabled="{Binding AreFieldsEnabled}"
                Margin="0,0,0,5"
                Padding="5"/>
                
                <Label
                Content="{Binding NameMessage}"
                 Foreground="{Binding Path=NameValidationState,
                           Converter={StaticResource StateToBrushConverter}}"
                FontSize="11"
                HorizontalAlignment="Center"
                />
            </StackPanel>

            <!-- PHONE -->
           
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
               
                <Label  Content="Телефон:" VerticalAlignment="Center"/>
                <TextBox
                Text="{Binding UserData.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,5" IsEnabled="{Binding AreFieldsEnabled}"
                Padding="5" BorderBrush="{Binding Path=PhoneValidationState,
                          Converter={StaticResource StateToBrushConverter}}"/>

                <Label
                Content="{Binding PhoneMessage}"
                Foreground="{Binding Path=PhoneValidationState,
                        Converter={StaticResource StateToBrushConverter}}"  
              
                FontSize="11"
                HorizontalAlignment="Center"
                />
            </StackPanel>
            
             <Label Grid.Row="4" 
                    Content="{Binding StatusMessage}" />

            <!-- BUTTONS -->
            <StackPanel
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,15,0,0">
               
                <Button
                Content="Отмена"
                 Command="{Binding CancelCommand}"
                Margin="0,0,10,0"
                Width="100"/>
                <Button
                Content="{Binding RegisterButtonText}"
                
                      Command="{Binding ToggleRegistrationCommand}"  
                    IsEnabled="{Binding ToggleRegistrationCommand.CanExecute}"
                   
                Width="140"
                />
            </StackPanel>
        </Grid>
    </ContentControl>



</UserControl>


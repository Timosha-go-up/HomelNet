<UserControl x:Class="WpfHomeNet.Controls.RegistrationViewControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:viewmodels="clr-namespace:WpfHomeNet.ViewModels"             
 xmlns:converter="clr-namespace:WpfHomeNet.Converters"


             mc:Ignorable="d"  Background="Transparent" BorderThickness="0"   
             Height="Auto" Width="Auto" Margin="10"
            >
    <UserControl.Resources>
        <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

       
    </UserControl.Resources>

    <ContentControl Style="{StaticResource TripleBorderStyle}" Padding="4" Background="#00000000">
        

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
               
            </Grid.ColumnDefinitions>

            <!-- EMAIL -->

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                <!-- Подпись "Email:" — теперь с динамическим цветом -->
                <Label Content="Email:" VerticalAlignment="Center">
                    <Label.Style>
                        <Style TargetType="Label">
                            <!-- Базовый цвет (нормальное состояние)-->
                            <Setter Property="Foreground" Value="Black"/>

                            <!-- Триггеры по ValidationState -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ValidationState}" Value="Error">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationState}" Value="Success">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>

                <!-- Поле ввода Email -->
                <TextBox Text="{Binding UserData.Email, UpdateSourceTrigger=PropertyChanged}"
        
        Margin="0,0,0,5"
        Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <!-- Базовый стиль (нормальное состояние)-->
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="1"/>

                            <!-- Триггеры для разных состояний -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ValidationState}" Value="Error">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationState}" Value="Success">
                                    <Setter Property="BorderBrush" Value="Green"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Сообщение об ошибке -->
                <Label
        Content="{Binding EmailError}"
        FontSize="11"
        HorizontalAlignment="Left"
        Visibility="{Binding EmailError, Converter={StaticResource StringToVisibilityConverter}}">
                    <!-- Можно добавить стиль для сообщения об ошибке, если нужно -->
                </Label>
            </StackPanel>



            <!-- PASSWORD -->
            
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                <Label  Content="Пароль:" VerticalAlignment="Center"/>
                <TextBox
                x:Name="passwordTextBox"
                Text="{Binding UserData.Password, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource ValidatedTextBoxStyle}"
                Margin="0,0,0,5"
                Padding="5"/>
                <Label
                Content="{Binding PasswordError}"
                
                FontSize="11"
                HorizontalAlignment="Left"
               />
            </StackPanel>

            <!-- USER NAME -->
            
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                <Label  Content="Имя пользователя:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding UserData.UserName, UpdateSourceTrigger=PropertyChanged}"
               
                Margin="0,0,0,5"
                Padding="5"/>
                
                <Label
                Content="{Binding NameError}"
                
                FontSize="11"
                HorizontalAlignment="Left"
                />
            </StackPanel>

            <!-- PHONE -->
           
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                <Label  Content="Телефон:" VerticalAlignment="Center"/>
                <TextBox
                Text="{Binding UserData.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,5"
                Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <!-- Базовый стиль (нормальное состояние)-->
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <!-- Триггеры для разных состояний -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ValidationState}" Value="Error">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                                <!-- Можно добавить другие состояния -->
                                <DataTrigger Binding="{Binding ValidationState}" Value="Success">
                                    <Setter Property="BorderBrush" Value="Green"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                    <Label
                Content="{Binding PhoneError}"
               
                FontSize="11"
                HorizontalAlignment="Left"
                />
            </StackPanel>

            <!-- BUTTONS -->
            <StackPanel
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,15,0,0">
                <Button
                Content="Отмена"
                Command="{Binding CancelCommand}"
                Margin="0,0,10,0"
                Width="100"/>
                <Button
                Content="Зарегистрировать"
                Command="{Binding RegisterCommand}"
                IsEnabled="{Binding RegisterCommand.CanExecute}"
                Width="120"
                />
            </StackPanel>
        </Grid>
    </ContentControl>



</UserControl>


<UserControl x:Class="WpfHomeNet.Controls.RegistrationViewControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:viewmodels="clr-namespace:WpfHomeNet.ViewModels"             
 xmlns:converter="clr-namespace:WpfHomeNet.Converters"


             mc:Ignorable="d"  Background="Transparent" BorderThickness="0"   
             Height="Auto" Width="Auto" Margin="10"
            >


    <ContentControl Style="{StaticResource TripleBorderStyle}" Padding="4" Background="#00000000">
         <ContentControl.Resources>
        <ResourceDictionary>
            <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </ContentControl.Resources>
        
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
            <!-- Email -->
            <StackPanel Grid.Row="0" Grid.Column="1">
                
           
            
            <TextBox  
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5" Padding="5"/>
            <Label Grid.Row="0" Grid.Column="1" 
               Content="{Binding EmailError}"
               Foreground="Red"
               Margin="5"
               HorizontalAlignment="Right"
               Visibility="{Binding EmailError, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Password -->
            <Label Grid.Row="1" Grid.Column="0" Content="Пароль:" VerticalAlignment="Center"/>
            <TextBox x:Name="passwordTextBox" Grid.Column="1" Grid.Row="1"
                 Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource PasswordTextBoxStyle}"/>
            <Label Grid.Row="1" Grid.Column="1" 
               Content="{Binding PasswordError}"
               Foreground="Red"
               Margin="5"
               HorizontalAlignment="Right"
               Visibility="{Binding PasswordError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- User Name -->
            <Label Grid.Row="2" Grid.Column="0" Content="Имя пользователя:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5" Padding="5"/>
            <Label Grid.Row="2" Grid.Column="1" 
               Content="{Binding UserNameError}"
               Foreground="Red"
               Margin="5"
               HorizontalAlignment="Right"
               Visibility="{Binding UserNameError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Phone -->
            <Label Grid.Row="3" Grid.Column="0" Content="Телефон:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5" Padding="5"/>
            <Label Grid.Row="3" Grid.Column="1" 
               Content="{Binding PhoneError}"
               Foreground="Red"
               Margin="5"
               HorizontalAlignment="Right"
               Visibility="{Binding PhoneError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Register Button -->
            <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Зарегистрировать"
                Command="{Binding RegisterCommand}"
                IsEnabled="{Binding RegisterCommand.CanExecute}"/>
        </Grid>
    </ContentControl>


</UserControl>


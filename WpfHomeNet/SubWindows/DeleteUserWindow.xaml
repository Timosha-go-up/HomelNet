<Window x:Class="WpfHomeNet.DeleteUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удаление пользователя" 
        Height="250"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"              
        WindowStartupLocation="CenterOwner"
        Background="Transparent">

    <ContentControl Style="{StaticResource InnerBorderSolidColorStyle}"
                    Background="#FFA4B291" >

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="59*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>


            <TextBlock Grid.Row="0" 
                Text="Выберите пользователя для удаления:"
                FontWeight="Bold"
                FontSize="14"
                HorizontalAlignment="Center"  />

            <StackPanel Grid.Row="1" Margin="5,0,0,0" Orientation="Horizontal" >
                <TextBox x:Name="userIdTextBox" Width="260"
                         VerticalContentAlignment="Center"
                         Text="Введите ID"
                         Background="#7FFFFFFF"
                         Foreground="DarkSlateGray"
                         GotFocus="UserIdTextBox_GotFocus"
                         LostFocus="UserIdTextBox_LostFocus"
                         Padding="5">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border CornerRadius="5"
                                    BorderBrush="DarkSlateGray"
                                    BorderThickness="0.5" Background="{TemplateBinding Background}">
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <Button x:Name="searchButton" 
                     Content="Найти" Margin="5,0,0,0"
                     Width="90" Height="40"
                     Click="SearchUser_Click" 
                     Background="Transparent"/>
            </StackPanel>
            <Border 
                Grid.Row="2"               
                BorderThickness="0.3"
                BorderBrush="Black"
                CornerRadius="5"
                Background="#7FFFFFFF"
                Margin="5" >
                <ListBox  Style="{StaticResource RoundedListBox}" x:Name="userListBox"  
                    DisplayMemberPath="DisplayInfo"
                    SelectedValuePath="Id"  Margin="5"  
                    SelectionChanged="UserListBox_SelectionChanged"
                    Background="Transparent" >
                    <ListBox.Resources>
                        <Style TargetType="{x:Type ScrollViewer}">
                            <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
                        </Style>
                    </ListBox.Resources>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Style.Triggers>
                                <Trigger Property="Tag" Value="Found">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                   </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <StackPanel
            Grid.Row="3" 
            Orientation="Horizontal"
            HorizontalAlignment="Right"  Width="Auto" >
                <Button x:Name="yesButton"
                    Width="80" 
                    Content="Удалить"
                    Margin="0,0,10,0" 
                    Height="35"
                    Click="YesButton_Click"                 
                    IsEnabled="{Binding CanDelete}"
                    Background="#00DDDDDD"/>
                <Button x:Name="noButton"
                    Margin="0,0,5,0"                 
                    Content="Отмена"
                    Width="80"
                    Height="35"
                    Click="NoButton_Click" 
                    Background="Transparent"/>
            </StackPanel>
        </Grid>
    </ContentControl>
</Window>


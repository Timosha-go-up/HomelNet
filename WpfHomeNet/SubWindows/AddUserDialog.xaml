<Window x:Class="HomeSocialNetwork.AddUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя"
        Height="250" Width="410"
        WindowStyle="None" AllowsTransparency="True"
        
        WindowStartupLocation="CenterOwner" Background="Transparent">

    <Window.Resources>
       
        <!-- Стиль для TextBox с закруглёнными углами -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                    Name="border"
                    CornerRadius="2"
                    BorderThickness="0.6"
                    BorderBrush="Black"
                    Background="#4CFFFFFF"
                    Padding="{TemplateBinding Padding}">
                            <!-- Добавляем VerticalContentAlignment к ScrollViewer -->
                            <ScrollViewer
                        x:Name="PART_ContentHost"
                        Focusable="false"
                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#808080"/>
                            </Trigger>

                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="DarkGray"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <ContentControl Style="{StaticResource InnerBorderSolidColorStyle}" >
        <Grid Margin="15,15,15,20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая колонка: метки в StackPanel -->
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"                   
            Orientation="Vertical"                   
                   Margin="4,2,4,4">
            <Label Content="Имя :" FontWeight="Bold" />
            <Label Content="Фамилия :" FontWeight="Bold"/>
            <Label Content="Телефон :" FontWeight="Bold"/>
            <Label Content="Email:" FontWeight="Bold"/>
            <Label Content="Пароль :" FontWeight="Bold"/>
        </StackPanel>


        <!-- Правая колонка: поля ввода в Border -->


        <!-- Кнопки внизу -->
        <StackPanel Grid.Column="1" Grid.Row="1"
          
            Orientation="Horizontal"
            HorizontalAlignment="Center" Width="200"
            >
            <Button Padding="1" 
                Content="ОК" 
                Click="OkButton_Click" Width="98" />
            <Button  Padding="1"
                Content="Отмена" Width="98" 
                Click="CancelButton_Click" 
                IsCancel="True"/>
        </StackPanel>

        <Border
            Grid.Column="1"
            BorderThickness="0.6"
            BorderBrush="Black"
            CornerRadius="2"
            VerticalAlignment="Top"
            Padding="1.5,1.5,1.5,1.5"
            Height="134">
            <!-- Минимизировали отступы -->
            <Grid VerticalAlignment="Top">
                <!-- Прижимаем к верху -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="FirstNameTextBox"
                 Grid.Row="0"  
                 ToolTip="Обязательное поле"
                 Style="{StaticResource RoundedTextBoxStyle}"
                 Background="#4CFFFFFF"/>

                <TextBox x:Name="LastNameTextBox"
                 Grid.Row="1" 
                 ToolTip="Можно не указывать"
                 Style="{StaticResource RoundedTextBoxStyle}"
                />

                <TextBox x:Name="PhoneNumberTextBox"
                 Grid.Row="2" 
                 ToolTip="Формат: +7 XXX XXX-XX-XX" 
                 Style="{StaticResource RoundedTextBoxStyle}"
                 />

                <TextBox x:Name="EmailTextBox"
                 Grid.Row="3"  
                 ToolTip="Обязательное поле, уникальный адрес"
                 Style="{StaticResource RoundedTextBoxStyle}"
                />

                <Border Grid.Row="4" CornerRadius="2"
                   Padding="0"
                    BorderBrush="Black"
                    BorderThickness="0.6"
                   >                      
                    <PasswordBox
                        x:Name="PasswordBox"                       
                        BorderThickness="0"                       
                        ToolTip="Обязательное поле, минимум 6 символов"                    
                        Background="#4CFFFFFF"
                        Password=""/>

                </Border>


            </Grid>
        </Border>



    </Grid>
        </ContentControl>
</Window>





<Window x:Class="WpfHomeNet.SubWindows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHomeNet.SubWindows"
         Title="Удаление пользователя" 
         Height="200"
         Width="450"
         WindowStyle="None"
         AllowsTransparency="True"
         BorderThickness="1"
         BorderBrush="Black"
         WindowStartupLocation="CenterOwner"
        Background="#3FABC8AB">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <StackPanel  Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent">
            <StackPanel
                Orientation="Horizontal"                       
                HorizontalAlignment="Right"                         
                Margin="10">
                <Button 
                   
                   Click="OkButton_Click"                  
                   Width="70" IsDefault="True"
                    Background="Transparent"/>    

                <Button 
                   Content="ОК" 
                   Click="OkButton_Click"                  
                   Width="70" Height="25" IsDefault="True"
                    Background="#7FDDDDDD"/>
            </StackPanel  >
            <Border 
                Margin="10,0,10,0"    
                BorderBrush="Black"
                Background="#7FE2DBDB"
                CornerRadius="1">                   
                <TextBlock
                    Margin="12,10,10,10"
                    Name="MessageText"
                    TextWrapping="Wrap"
                    FontSize="14"
                    Width="Auto"
                    Height="90" />  
            </Border>


        </StackPanel>
         
  
    </Grid>
</Window>

<Window x:Class="WpfHomeNet.DeleteUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удаление пользователя" 
        Height="250" Width="350"
        WindowStyle="None" AllowsTransparency="True"
        BorderThickness="2" BorderBrush="Black"
        WindowStartupLocation="CenterOwner" Background="#FF9CB486">

    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0.2"/>
            <Setter Property="BorderBrush" Value="Black"/>

            <!-- Триггеры для эффектов -->
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsFocused" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                </MultiTrigger>

                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsFocused" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="LightBlue"/>
                    <Setter Property="Background" Value="LightBlue"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

      

        <!-- НОВЫЙ СТИЛЬ ДЛЯ КНОПОК -->
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="97"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2,5,0,0"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.2"/>
            <Setter Property="Background" Value="#00DDDDDD"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <!-- Эффекты при наведении -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80DDDDDD"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CCDDDDDD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Выберите пользователя для удаления:"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="userIdTextBox"
         Width="200"
         Margin="5"
         Text="Введите ID"
         Foreground="Black"
         GotFocus="userIdTextBox_GotFocus"
         LostFocus="userIdTextBox_LostFocus"/>




            <Button x:Name="searchButton" 
                   Content="Найти" 
                   Click="SearchUser_Click" 
                   Margin="5"/>

            <TextBlock x:Name="statusTextBlock"
               Margin="10,0,0,0"
               Foreground="DarkGreen"
               Opacity="0" 
               VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>


        <ListBox x:Name="userListBox" 
    Grid.Row="2"
    DisplayMemberPath="DisplayInfo"
    SelectedValuePath="Id"
    Margin="5"
    SelectionChanged="userListBox_SelectionChanged"                 
    Height="100" Background="Transparent"
    >
              <ListBox.ItemContainerStyle>
        <Style TargetType="{x:Type ListBoxItem}">
            <!-- Убираем рамку фокуса -->
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            
            <!-- Отключаем стандартные эффекты -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Normal"/> <!-- Шрифт по умолчанию -->

            <!-- Триггер только на кастомное свойство Tag="Found" -->
            <Style.Triggers>
                <Trigger Property="Tag" Value="Found">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="DarkBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </ListBox.ItemContainerStyle>
        </ListBox>

   




        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
            <Button x:Name="yesButton" 
       Content="Удалить" 
       Click="YesButton_Click" 
       Margin="5"
       IsEnabled="{Binding CanDelete}"/>
            <Button x:Name="noButton" 
                   Content="Отмена" 
                   Click="NoButton_Click" 
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>


<Window x:Class="WpfHomeNet.MainWindow"
        xmlns:controls="clr-namespace:WpfHomeNet.Controls"
        xmlns:local="clr-namespace:WpfHomeNet.UiHelpers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"     
        Title="HomeNet"
        WindowStyle="None"
        ResizeMode="CanResize"
        MinWidth="850"
        MinHeight="600"
        Width="850"
        Height="600"
        AllowsTransparency="True"
        FontFamily="Calibri"
        FontSize="14"     
                        
        Background="Transparent"
        Loaded="Window_Loaded">

    <!-- Основной контейнер с тройным бордером -->
    <ContentControl Style="{StaticResource TripleBorderStyle}"
                    Width="850"  MouseDown="WindowDrag_MouseDown"
                    Height="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
        <Grid Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"  />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0">
                <Label HorizontalAlignment="Center" 
                       FontWeight="Bold"
                       Content="HomeNet"
                       FontSize="20"
                       Foreground="Black"/>
            </Border>

            <StackPanel x:Name="Menu" Grid.Row="1" Grid.Column="0"
                        Orientation="Vertical">
                <Button Content="Test list Users" Click="AddUsersList_Click"/>
                <Button Content="Добавить юзера" Click="AddUser_Click"/>
                <Button x:Name="DeleteButton" Click="RemoveUser_Click"
                        Content="Удалить юзера"/>
                <Button x:Name="ShowButton" Click="ShowUsers_Click"
                        Content="Показать юзеров"/>
                <Button Content="Обновить юзеров" Click="RefreshStatus_Click"/>
                <Button x:Name="btnLogs" Click="ShowWindowLogs_Click"
                        Content="Показать логи"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal">
                <Button Content="Регистрация" Width="150"/>
                <Button Content="Вход в профиль" Width="150"/>
                <Button Grid.Column="4" Click="CloseButton_Click"
                        Content="×" Width="40"/>
            </StackPanel>

            <controls:UsersTableView x:Name="userTableView"
                                  Grid.Row="2"
                                  Grid.ColumnSpan="5"
                                  Margin="2,0,2,0"
                                  Visibility="Collapsed"/>
            <Border Grid.Row="3" CornerRadius="6" Margin="4"
                    Background="#66ABC8AB"
                    Grid.Column="0" Grid.ColumnSpan="5">
                <StatusBar x:Name="StatusUsers" Margin="4" Background="Transparent">
                    <TextBlock Name="StatusText" Margin="3"
                               Text="{Binding StatusText}" FontWeight="Bold"/>
                </StatusBar>
            </Border>
        </Grid>
    </ContentControl>
</Window>





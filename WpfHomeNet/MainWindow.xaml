<Window x:Class="WpfHomeNet.MainWindow"  WindowStartupLocation="Manual"       
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:WpfHomeNet.Controls"
    xmlns:local="clr-namespace:WpfHomeNet.UiHelpers"   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"        
    WindowStyle="None"
    ResizeMode="CanResize"           
    Width="800"
    Height="600"
         MinWidth="800"                     
 MinHeight="600"  
    AllowsTransparency="True"
    FontFamily="Calibri"
    FontSize="14"                             
    Background="Transparent"
    Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="9.4"/>
            <Setter Property="BorderThickness" Value="0.6"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <!-- Основной контейнер с тройным бордером -->
    <ContentControl 
        Style="{StaticResource TripleBorderStyle}"                    
        Width="800"                         
        Height="600"
        MinWidth="800"                     
        MinHeight="600"                    
        HorizontalAlignment="Center"                    
        VerticalAlignment="Center"
        MouseDown="WindowDrag_MouseDown"  >


        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="40"/>

            </Grid.ColumnDefinitions>

            <!--  шапка  -->
            <Border
                Grid.Row="0" 
                Grid.Column="0">
                <Label
                    HorizontalAlignment="Center" 
                    FontWeight="Bold"
                    Content="HomeNet"
                    FontSize="20"
                    Foreground="Black"/>
            </Border >

            <!--  контейнер меню  -->
            <StackPanel x:Name="Menu" Visibility="Collapsed"
                        d:Visibility="Visible"
                 Grid.Column="0" Grid.Row="1"
                 Grid.RowSpan="3" Margin="0,0,0,0"  >
                <Button Content="Test list Users"
                        Click="AddUsersList_Click"  />
                <Button Content="Добавить юзера"
                        Click="AddUser_Click"/>
                <Button x:Name="DeleteButton"
                        Click="RemoveUser_Click"
                        Content="Удалить юзера"/>
                <Button x:Name="ShowButton" 
                        Click="ShowUsers_Click"
                        Content="Показать юзеров"/>
                <Button Content="Обновить юзеров"
                        Click="RefreshStatus_Click"/>
                <Button x:Name="btnLogs"
                        Click="ShowWindowLogs_Click"
                        Content="Показать логи"/>
            </StackPanel>

            <Button x:Name="ButtonExit" Grid.Column="4"
                    Content="Выйти из аккаунта"
                    Visibility="Collapsed">
                
            </Button>

            <!--  контейнер верхнее меню -->
            <StackPanel x:Name="UpperMenu" Visibility="Visible"
                        HorizontalAlignment="Right"
                Grid.Row="0"               
                Grid.Column="3"                        
                Orientation="Horizontal"                        
                Grid.ColumnSpan="2" >
                <Button MinWidth="120"
                    Content="Регистрация"
                     />
                <Button Width="Auto"
                    Content="Вход в профиль" 
                    MinWidth="120"
                    Click="LoginInButton_Click"/>
            </StackPanel>
             <Button  Grid.Column="5"              
                    Click="CloseButton_Click"
                    Content="×" Width="Auto"/>
            

            <!--  контейнер для входа   -->
            <ContentControl x:Name ="LoginIn" Grid.Column="2" 
                 Grid.RowSpan="2" Grid.Row="2" 
                 Height="Auto" Width="Auto"                 
                 Style="{StaticResource InnerBorderSolidColorStyle}"
                 Visibility="Collapsed"                                              
                 d:Visibility="Visible"
                 Background="#FFA4B291" Grid.ColumnSpan="2" Margin="0,0,0,0" >

                <StackPanel Margin="20,40,20,40" >
                    <Label x:Name="InputInfoTitle" 
       HorizontalAlignment="Center"
       Content="Введите ваш email"
       FontWeight="Bold" 
       Margin="0,0,0,20"
       FontSize="20"
      
                        Foreground="Black"/><!-- Для визуального отслеживания -->
                        <!-- Поле ввода -->
                    <TextBox x:Name="InputDataAuthenficate"
                          Height="35"
                          Foreground="Black"
                          VerticalContentAlignment="Center"
                          Padding="5" >

                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="5"
                                    BorderBrush="DarkSlateGray"
                                    BorderThickness="0.5"
                                    Background="{TemplateBinding Background}">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    <!-- Динамическая подсказка под полем -->
                    <Label x:Name="InputHelper"
                        HorizontalAlignment="Center"
                        FontWeight="UltraLight"
                        FontSize="11"
                        Margin="5,3,0,0"
                        Foreground="#FF615959"
                        Content="Введите корректный email (например: user@example.com)" />
                    <StackPanel
                        HorizontalAlignment="Right"                                
                        Margin="0,40,0,0"
                        Orientation="Horizontal" >
                        <Button                         
                            Height="35"
                            MinWidth="100"
                            Content="Выход" 
                            Click="LoginInPanelButtonExit_Click"
                            Margin="0,0,10,0" />
                        <Button 
                            Margin="0"
                            Height="35"
                            MinWidth="100"
                            Content="OK" 
                            Click="LoginInPanelButtonOk_Click"/>
                    </StackPanel>
                </StackPanel>
            </ContentControl>


            <!--  контейнер таблицас пользователями  -->
            <controls:UsersTableView x:Name="userTableView"
                         Grid.Row="3"
                         Grid.ColumnSpan="6"
                         Margin="0,3,0,3"  Grid.RowSpan="2"
                         Visibility="Collapsed"
                         d:Visibility="Visible"/>
            <!--  контейнер статус бар  -->
            <ContentControl
               Style="{StaticResource InnerBorderSolidColorStyle}" 
               Padding="4"  
               Background="#FFA4B291"
               Grid.Row="4"
               Grid.Column="0"
               Grid.ColumnSpan="6" Margin="0,137,0,0" Grid.RowSpan="2">
                <StatusBar x:Name="StatusUsers"
                   Background="#00A3C091">
                    <TextBlock Name="StatusText"
                   Margin="3"
                   Text="{Binding StatusText}"
                   FontWeight="Bold"/>
                </StatusBar>
            </ContentControl>

        </Grid>
    </ContentControl>
</Window>




